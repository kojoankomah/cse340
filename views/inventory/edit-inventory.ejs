<h1>Edit Inventory</h1>

<!-- Flash messages -->
<% if (messages && messages.length > 0) { %>
  <ul class="messages">
    <% messages.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Server-side validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="error-messages">
    <% errors.forEach(err => { %>
      <li><%= err.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="updateForm" method="post" action="/inv/update">
  <!-- Classification Dropdown -->
<label for="classification_id">Classification</label>
<select name="classification_id" id="classification_id" required>
  <% if (Array.isArray(classificationList.rows || classificationList)) { %>
    <% (classificationList.rows || classificationList).forEach(c => { %>
      <option value="<%= c.classification_id %>" 
        <%= c.classification_id == selectedClassification ? "selected" : "" %>>
        <%= c.classification_name %>
      </option>
    <% }) %>
  <% } else { %>
    <option value="">No classifications available</option>
  <% } %>
</select>


  <!-- Vehicle fields -->
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" required minlength="2">

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" required>

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" min="1886" max="2099" required>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" step="0.01" value="<%= inv_price %>" min="0" required>

  <label for="inv_miles">Mileage</label>
  <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" min="0" required>

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" required>

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

  <label for="inv_image">Image Path</label>
  <input type="text" id="inv_image" name="inv_image" value="<%= inv_image || '/images/no-image-available.png' %>">

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail || '/images/no-image-available.png' %>">

  <!-- Hidden field for vehicle ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">
  <input type="hidden" name="inv_image" value="<%= inv_image %>">
  <input type="hidden" name="inv_thumbnail" value="<%= inv_thumbnail %>">

  <button type="submit">Update Vehicle</button>
</form>

<script src="/js/inv-update.js"></script>

