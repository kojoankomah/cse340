<!-- views/inventory/delete-confirm.ejs -->

<h1>Delete Inventory Item</h1>

<p class="warning">
  Confirm Deletion â€” <strong>This action is permanent and cannot be undone.</strong>
</p>

<!-- Flash messages -->
<% if (messages && messages.length > 0) { %>
  <ul class="messages">
    <% messages.forEach(msg => { %>
      <li><%= msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Server-side validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="error-messages">
    <% errors.forEach(err => { %>
      <li><%= err.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form method="post" action="/inv/delete">
  <!-- Read-only vehicle details -->
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= item.inv_make %>" readonly>

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= item.inv_model %>" readonly>

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= item.inv_year %>" readonly>

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= item.inv_price %>" readonly>

  <!-- Hidden field for vehicle ID -->
  <input type="hidden" name="inv_id" value="<%= item.inv_id %>">

  <button type="submit" class="delete-btn">Delete Vehicle</button>
</form>
