<!-- views/management.ejs -->

<div class="management-container">
  <h1>Inventory Management</h1>

  <!-- Flash message display -->
  <% if (messages && messages.length > 0) { %>
    <div class="flash-messages">
      <% messages.forEach(function(message) { %>
        <p><%= message %></p>
      <% }) %>
    </div>
  <% } %>

  <ul>
    <li><a href="/inv/add-classification">Add New Classification</a></li>
    <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
  </ul>

  <h2>Manage Inventory</h2>
  <p>Select a classification from the list to see the items belonging to that classification.</p>

  <!-- Classification dropdown (built dynamically in controller) -->
  <div class="classification-select">
    <%- classificationSelect %>
  </div>

  <!-- Table where JS will inject data -->
  <table id="inventoryDisplay"></table>

  <!-- Message if JavaScript is d isabled -->
  <noscript>JavaScript must be enabled to use this page.</noscript>
</div>

<!-- Link the inventory.js script -->
<script src="/js/inventory.js"></script>
